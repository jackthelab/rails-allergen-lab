<h1>Ingredients</h1>

<div class="ingredient-list">
<% @ingredients_by_allergies.each do |ingredient| %>
    <div class="ingredient-item">
        <h3 class="ingredient-name"><%= link_to ingredient.name, ingredient_path(ingredient) %></h3>
        <p class="ingredient-count"><%= "No. of users allergic: #{ingredient.allergy_count}" %></p>
    </div>
<% end %>
</div>


<div class="nav-bar botton-nav">
    <%= link_to "Home", '/' %>
    <%= link_to "Recipes", recipes_path %>
    <%= link_to "Ingredients", ingredients_path %>
</div>
